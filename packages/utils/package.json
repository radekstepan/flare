{
  "dependencies": {
    "glob": "^10.2.6",
    "joi": "^17.9.2",
    "js-yaml": "^4.1.0",
    "serialize-error": "^11.0.0"
  },
  "devDependencies": {
    "@radekstepan/flare-types": "^1.0.0",
    "@types/jexl": "^2.3.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^20.2.5",
    "@types/sinon": "^10.0.15",
    "ava": "^5.3.0",
    "c8": "^7.14.0",
    "del-cli": "^5.0.0",
    "lint-staged": "^13.2.2",
    "mock-fs": "^5.2.0",
    "path-scurry": "^1.9.2",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "test": "tsc --noEmit && NODE_NO_WARNINGS=1 c8 ava",
    "test:dev": "clear ; tsc --noEmit && NODE_NO_WARNINGS=1 ava --serial --fail-fast",
    "build:node": "tsc -p tsconfig.node.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "build": "del-cli dist && yarn run build:node && yarn run build:browser"
  },
  "name": "@radekstepan/flare-utils",
  "version": "1.0.0",
  "main": "./dist/node/index.node.js",
  "exports": {
    "types": "./dist/node/index.node.d.ts",
    "default": "./dist/node/index.node.js",
    "module": "./dist/browser/index.browser.js"
  },
  "files": [
    "dist/"
  ],
  "type": "module",
  "author": "Radek Stepan <dev@radekstepan.com>",
  "license": "MIT",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "c8": {
    "reporter": [
      "html",
      "text"
    ]
  }
}
