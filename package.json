{
  "dependencies": {
    "jexl": "^2.3.0",
    "js-yaml": "^4.1.0",
    "serialize-error": "^11.0.0"
  },
  "devDependencies": {
    "@types/jexl": "^2.3.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.2.5",
    "@types/sinon": "^10.0.15",
    "ava": "^5.3.0",
    "c8": "^7.14.0",
    "del-cli": "^5.0.0",
    "husky": "^8.0.3",
    "joi": "^17.9.2",
    "lint-staged": "^13.2.2",
    "np": "^8.0.2",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "test": "tsc --noEmit && NODE_NO_WARNINGS=1 c8 --reporter=html ava",
    "test:dev": "clear ; tsc --noEmit && NODE_NO_WARNINGS=1 ava --serial --fail-fast",
    "build": "del-cli dist && tsc",
    "release": "np",
    "prepare": "husky install"
  },
  "name": "flare",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "author": "Radek Stepan <dev@radekstepan.com>",
  "license": "MIT",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "ava": {
    "files": [
      "test/**/*.test.*"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
