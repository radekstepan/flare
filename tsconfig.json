{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "node16",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
